#:kivy 1.9.1

<CustomButton@Button>
    id: "{}ID".format(root.button_text)
    text: root.button_text
    background_normal: root.background_normal
    background_down: root.background_down
    size_hint_y: None
    text_size: root.width - 150, root.height
    valign: "middle"
    height: 65
    markup: True

    # Иконка действия очистки
    Image:
        source: root.icon
        size_hint_y: None
        height: 30
        pos: root.x - 25, root.y + self.height / 2
    # Иконка прогресса очистки
    Image:
        id: iconcleanID
        source: "Data/Images/loading.gif"
        size_hint_y: None
        pos: root.width / 2 - 25, root.y
        size: root.size

