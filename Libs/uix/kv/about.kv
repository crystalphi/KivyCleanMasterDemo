#:kivy 1.9.1
#:import exists os.path.exists

<About>:
    orientation: "vertical"

    ScrollView:
        GridLayout:
            cols: 1
            size_hint_y: None
            spacing: 10
            padding: 10
            height: self.minimum_height
            canvas:
                Color:
                    rgb:
                        0.7294117647058823, 0.7686274509803922, \
                        0.8470588235294118
                Rectangle:
                    pos: self.pos
                    size: self.size

            # Логотип приложения
            Image:
                source: "Data/Images/logo.png"
                size_hint_y: None

            # Версия приложения
            Label:
                text: "Clean Master 5.4.0.1395"
                size_hint_y: None
                height: "10pt"
                color: 0.1, 0.1, 0.1, 1
                italic: True

            # Бокс меню share
            GridLayout:
                id: box_share
                cols: 1
                size_hint_y: None
                height: self.minimum_height

                # Текст лицензии
            Label:
                text:
                    open("LICENSE").read() if exists("LICENSE") else \
                    "Demo Clean Master"
                text_size: self.size[0], None
                font_size: "10pt"
                size_hint_y: None
                height: root.height / 1.8
                color: 0.1, 0.1, 0.1, 1

    # Бокс копирайта
    BoxLayout:
        orientation: "vertical"
        size_hint: 1, .2
        canvas:
            Color:
                rgb: 0.7294117647058823, 0.7686274509803922, 0.8470588235294118
            Rectangle:
                pos: self.pos
                size: self.size
            Color:
                rgb: 0.5843137254901961, 0.5843137254901961, 0.5843137254901961
            Line:
                points: [0, self.size[1], self.size[0], self.size[1]]
                width: 1
        Label:
            text: "Copyright 2016 Demo Clean Master\nby HeaTTheatR"
            halign: "center"
            color: 0.1, 0.1, 0.1, 1